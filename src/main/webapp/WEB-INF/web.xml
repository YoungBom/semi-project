<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         version="5.0"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd">

  <display-name>UserApp</display-name>

  
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
    <init-param><param-name>encoding</param-name><param-value>UTF-8</param-value></init-param>
    <init-param><param-name>ignore</param-name><param-value>false</param-value></init-param>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  
  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>com.example.app.filter.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/mypage</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/edit</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/password/change</url-pattern>
  </filter-mapping>

  
  <servlet>
    <servlet-name>AuthLoginServlet</servlet-name>
    <servlet-class>com.example.app.controller.AuthLoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthLoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AuthLogoutServlet</servlet-name>
    <servlet-class>com.example.app.controller.AuthLogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthLogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>SignupServlet</servlet-name>
    <servlet-class>com.example.app.controller.SignupServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>SignupServlet</servlet-name>
    <url-pattern>/signup</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>MyPageServlet</servlet-name>
    <servlet-class>com.example.app.controller.MyPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MyPageServlet</servlet-name>
    <url-pattern>/mypage</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>UserEditServlet</servlet-name>
    <servlet-class>com.example.app.controller.UserEditServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserEditServlet</servlet-name>
    <url-pattern>/edit</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>PasswordChangeServlet</servlet-name>
    <servlet-class>com.example.app.controller.PasswordChangeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PasswordChangeServlet</servlet-name>
    <url-pattern>/password/change</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>PasswordForgotServlet</servlet-name>
    <servlet-class>com.example.app.controller.PasswordForgotServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PasswordForgotServlet</servlet-name>
    <url-pattern>/password/forgot</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>PasswordResetServlet</servlet-name>
    <servlet-class>com.example.app.controller.PasswordResetServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PasswordResetServlet</servlet-name>
    <url-pattern>/password/reset</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
